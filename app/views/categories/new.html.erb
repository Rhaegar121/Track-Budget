<%= render 'shared/header', title: "add category", back: categories_path %>

<%= form_with model: @category do |f| %>
    <div>
        <%= f.label :name, "Name:" %>
        <%= f.text_field :name, required: true %>
    </div>

      <% options = [  ["🍔"],
    ["🛒"],
    ["🚗"],
    ["🐶"],
    ["📚"],
    ["💻"],
    ["🎁"],
    ["🏠"],
    ["🏥"],
    ["🎬"],
    ["👔"],
    ["🎓"],
  ] %>

   <div>
        <%= f.label :icon, "Select an icon:" %>
        <%= f.select :icon, options_for_select(options, selected: @category.icon), {prompt: "Select an icon" } %>
  </div>

    <div class="btn">
        <%= f.submit "Add Category" %>
    </div>
<% end %>
