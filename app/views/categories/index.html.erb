<%= render 'shared/header', title: "categories", back: false %>

<% if @categories.empty? %>
    <h2>No category found</h2>
<% else %>
    <ul>
        <% @categories.each do |category| %>
            <%= link_to category_purchases_path(category.id) do %>
                <li class="category">
                    <div><%= category.icon %></div>
                    <div><%= category.name %></div>
                    <div><%= number_to_currency(category.total) %></div>
                </li>
            <% end %>
        <% end %>
    </ul>
<% end %>

<div class="addLink">
    <%= link_to "Add Category", new_category_path %>
</div>
