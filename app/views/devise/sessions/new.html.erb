<%= render 'shared/header', title: "Log In", back: unauthenticated_root_path %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email: ", autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password: ", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember_me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions btn">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
